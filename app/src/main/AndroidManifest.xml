<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jordiortuno.signupform">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name="com.jordiortuno.signupform.framework.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SignupForm">
        <activity android:name="com.jordiortuno.signupform.framework.ui.auth.AuthActivity">
        </activity>
        <activity android:name="com.jordiortuno.signupform.framework.ui.main.MainActivity">
        </activity>

        <activity
            android:name="com.jordiortuno.signupform.framework.ui.main.SplashScreen"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>